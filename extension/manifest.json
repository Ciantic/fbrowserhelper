{
    "name": "f_browser_helper_ext",
    "description": "Taskbar helper",
    "manifest_version": 3,
    "version": "1.0",
    "icons": {
        "48": "icon.svg"
    },

    "browser_specific_settings": {
        "gecko": {
            "id": "f_browser_helper_ext@oksidi.com"
        }
    },

    "background": {
        "service_worker": "background.js",
        "scripts": ["background.js"],
        "type": "module"
    },

    "action": {
        "default_icon": "icon.svg"
    },

    "permissions": ["nativeMessaging", "tabs"]
}
